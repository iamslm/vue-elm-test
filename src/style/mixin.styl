$blue = #3190e8;
$bc = #e4e4e4;
$fc = #fff;



//定位上下居中
ct() {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);    
}

//宽高
wh($width, $height) {
    width: $width;
    height $height;    
}

//字体大小，颜色
sc($size, $color) {
    font-size: $size;
    color: $color;
}

center() {
    position absolute;
    top 50%
    left 50%
    transform: translate(-50%, -50%)
}

font($size, $line-height, $family = 'Microsoft YaHei') {
    font $size $line-height $family
}

fj($type = space-between) {
    display flex
    justify-content $type
}