$blue = #3190e8;



//定位上下居中
ct() {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);    
}

//宽高
wh($width, $height) {
    width: $width;
    height $height;    
}

//字体大小，颜色
sc($size, $color) {
    font-size: $size;
    color: $color;
}

center() {
    position absolute;
    top 50%
    left 50%
    transform: translate(-50%, -50%)
}
